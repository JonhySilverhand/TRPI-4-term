{"ast":null,"code":"import SliderItem from \"@/components/SliderItem.vue\";\nexport default {\n  name: \"Slider\",\n  components: {\n    SliderItem: SliderItem\n  },\n  props: {\n    sliderData: {\n      type: Array,\n      default: () => []\n    }\n  },\n  data() {\n    return {\n      currentSlideIndex: 0\n    };\n  },\n  methods: {\n    prevSlide() {\n      this.$refs.slider.style.opacity = '0';\n      if (this.currentSlideIndex > 0) {\n        this.currentSlideIndex -= 1;\n      } else {\n        this.currentSlideIndex = this.sliderData.length - 1;\n      }\n      this.$refs.slider.style.opacity = '1';\n    },\n    nextSlide() {\n      if (this.currentSlideIndex == this.sliderData.length - 1) {\n        this.currentSlideIndex = 0;\n      } else {\n        this.currentSlideIndex++;\n      }\n    }\n  }\n};","map":{"version":3,"names":["SliderItem","name","components","props","sliderData","type","Array","default","data","currentSlideIndex","methods","prevSlide","$refs","slider","style","opacity","length","nextSlide"],"sources":["D:\\University\\4th_term\\ТРПИ\\lab5-7\\src\\components\\Slider.vue"],"sourcesContent":["<template>\r\n  <div :class=\"$style.container\">\r\n    <div :class=\"$style.wrapper\">\r\n      <div ref=\"slider\" :class=\"$style.slider\" :style=\"{ 'margin-left': '-' + (100 * currentSlideIndex) + '%'}\">\r\n        <SliderItem\r\n          v-for=\"item in sliderData\"\r\n          :key=\"item.id\"\r\n          :itemData=\"item\"\r\n          @prevSlide=\"prevSlide\"\r\n          @nextSlide=\"nextSlide\"\r\n        />\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport SliderItem from \"@/components/SliderItem.vue\"\r\nexport default {\r\n  name: \"Slider\",\r\n  components: {\r\n    SliderItem: SliderItem\r\n  },\r\n  props: {\r\n    sliderData: {\r\n      type: Array,\r\n      default: () => []\r\n    }\r\n  },\r\n  data() {\r\n    return {\r\n      currentSlideIndex: 0\r\n    }\r\n  },\r\n  methods: {\r\n    prevSlide() {\r\n      this.$refs.slider.style.opacity = '0';\r\n      if (this.currentSlideIndex > 0) {\r\n        this.currentSlideIndex -= 1;\r\n      } else {\r\n        this.currentSlideIndex = this.sliderData.length - 1;\r\n      }\r\n      this.$refs.slider.style.opacity = '1';\r\n    },\r\n    nextSlide() {\r\n      if (this.currentSlideIndex == this.sliderData.length - 1) {\r\n        this.currentSlideIndex = 0;\r\n      } else {\r\n        this.currentSlideIndex++;\r\n      }\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style module lang=\"scss\">\r\n  .container {\r\n    width: 100%;\r\n    height: 100%;\r\n    background-color: #4FBFA5;\r\n  }\r\n  .wrapper {\r\n    width: 1296px;\r\n    overflow: hidden;\r\n    margin: 0 auto;\r\n  }\r\n  .slider {\r\n    display: flex;\r\n    transition: all 0.5s ease;\r\n  }\r\n</style>"],"mappings":"AAiBA,OAAOA,UAAS,MAAO,6BAA4B;AACnD,eAAe;EACbC,IAAI,EAAE,QAAQ;EACdC,UAAU,EAAE;IACVF,UAAU,EAAEA;EACd,CAAC;EACDG,KAAK,EAAE;IACLC,UAAU,EAAE;MACVC,IAAI,EAAEC,KAAK;MACXC,OAAO,EAAEA,CAAA,KAAM;IACjB;EACF,CAAC;EACDC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,iBAAiB,EAAE;IACrB;EACF,CAAC;EACDC,OAAO,EAAE;IACPC,SAASA,CAAA,EAAG;MACV,IAAI,CAACC,KAAK,CAACC,MAAM,CAACC,KAAK,CAACC,OAAM,GAAI,GAAG;MACrC,IAAI,IAAI,CAACN,iBAAgB,GAAI,CAAC,EAAE;QAC9B,IAAI,CAACA,iBAAgB,IAAK,CAAC;MAC7B,OAAO;QACL,IAAI,CAACA,iBAAgB,GAAI,IAAI,CAACL,UAAU,CAACY,MAAK,GAAI,CAAC;MACrD;MACA,IAAI,CAACJ,KAAK,CAACC,MAAM,CAACC,KAAK,CAACC,OAAM,GAAI,GAAG;IACvC,CAAC;IACDE,SAASA,CAAA,EAAG;MACV,IAAI,IAAI,CAACR,iBAAgB,IAAK,IAAI,CAACL,UAAU,CAACY,MAAK,GAAI,CAAC,EAAE;QACxD,IAAI,CAACP,iBAAgB,GAAI,CAAC;MAC5B,OAAO;QACL,IAAI,CAACA,iBAAiB,EAAE;MAC1B;IACF;EACF;AACF"},"metadata":{},"sourceType":"module","externalDependencies":[]}